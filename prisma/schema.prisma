generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String           @id @default(cuid())
  email        String           @unique
  name         String?
  password     String?
  role         String           @default("user")
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  applications JobApplication[]
}

model PageContent {
  id        String        @id @default(cuid())
  title     String
  slug      String        @unique
  pageSlug  String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  navMenu   NavMenu?
  sections  PageSection[]
}

model PageSection {
  id                  String      @id @default(cuid())
  name                String?
  type                String
  position            Int         @default(0)
  htmlContent         String?
  splitFeatureSection String?
  pageId              String
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  page                PageContent @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model NavMenu {
  id        String       @id @default(cuid())
  label     String
  path      String
  isActive  Boolean      @default(true)
  position  Int          @default(0)
  pageId    String?      @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  page      PageContent? @relation(fields: [pageId], references: [id])
}

model GlobalSettings {
  id              String   @id @default(cuid())
  siteName        String   @default("My Website")
  siteDescription String?
  contactEmail    String?
  publicAccess    Boolean  @default(true)
  maintenanceMode Boolean  @default(false)
  logoType        String   @default("svg")
  logoGifUrl      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Theme {
  id        String   @id @default(cuid())
  name      String   @unique
  colors    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SEO {
  id          String   @id @default(cuid())
  title       String?
  description String?
  keywords    String?
  pageId      String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Script {
  id        String   @id @default(cuid())
  name      String
  code      String
  location  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id           String        @id @default(cuid())
  name         String
  email        String
  whatsapp     String?
  service      String?
  status       String        @default("new")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  source       String?       @default("Unknown")
  chatSessions ChatSession[]
}

model ChatSession {
  id        String        @id @default(cuid())
  leadId    String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  messages  ChatMessage[]
  lead      Lead?         @relation(fields: [leadId], references: [id])
}

model ChatMessage {
  id              String      @id @default(cuid())
  sessionId       String
  role            String
  content         String
  behaviorContext String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  session         ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Value {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  excerpt   String?
  slug      String   @unique
  iconUrl   String?
  bgUrl     String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeamMember {
  id           String   @id @default(cuid())
  name         String
  position     String
  excerpt      String?
  thumbnailUrl String?
  linkedinUrl  String?
  email        String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Speciality {
  id           String   @id @default(cuid())
  title        String
  subtitle     String?
  slug         String   @unique
  excerpt      String?
  description  String?
  iconUrl      String?
  bgUrl        String?
  thumbnailUrl String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Client {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?
  excerpt     String?
  logoUrl     String?
  isFeatured  Boolean     @default(false)
  status      String      @default("active")
  order       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  email       String?     @unique
  password    String?
  address     String?
  legalName   String?
  logo        String?
  phone       String?
  website     String?
  brandColor  String?
  caseStudies CaseStudy[]
}

model Candidate {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  password     String
  phone        String?
  resumeUrl    String?
  portfolioUrl String?
  linkedinUrl  String?
  role         String   @default("candidate")
  status       String   @default("active")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Category {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
  careers   Career[]
}

model Article {
  id           String    @id @default(cuid())
  title        String
  slug         String    @unique
  excerpt      String?
  content      String?
  thumbnailUrl String?
  status       String    @default("draft")
  isFeatured   Boolean   @default(false)
  categoryId   String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  category     Category? @relation(fields: [categoryId], references: [id])
}

model CaseStudy {
  id           String    @id @default(cuid())
  title        String
  slug         String    @unique
  excerpt      String?
  content      String?
  thumbnailUrl String?
  clientId     String?
  startDate    DateTime?
  endDate      DateTime?
  status       String    @default("published")
  isFeatured   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  metrics      String?
  client       Client?   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Career {
  id           String           @id @default(cuid())
  title        String
  slug         String           @unique
  location     String?
  type         String?
  minSalary    Float?
  maxSalary    Float?
  description  String?
  content      String?
  requirements String?          @default("[]")
  isRemote     Boolean          @default(false)
  applyUrl     String?
  status       String           @default("published")
  categoryId   String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  category     Category?        @relation(fields: [categoryId], references: [id])
  applications JobApplication[]
}

model JobApplication {
  id           String   @id @default(cuid())
  fullName     String
  email        String
  phone        String?
  linkedinUrl  String?
  portfolioUrl String?
  resumeUrl    String?
  coverLetter  String?
  answers      String?
  status       String   @default("new")
  careerId     String
  userId       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User?    @relation(fields: [userId], references: [id])
  career       Career   @relation(fields: [careerId], references: [id], onDelete: Cascade)
}
