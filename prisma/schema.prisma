generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(cuid())
  email        String           @unique
  name         String?
  password     String?
  role         String           @default("user")
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  applications JobApplication[]
}

model PageContent {
  id        String        @id @default(cuid())
  title     String
  slug      String        @unique
  pageSlug  String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  navMenu   NavMenu?
  sections  PageSection[]
  seo       SEO?
}

model PageSection {
  id                  String      @id @default(cuid())
  name                String?
  type                String
  position            Int         @default(0)
  htmlContent         String?     @db.LongText
  splitFeatureSection String?     @db.Text
  pageId              String
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  page                PageContent @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model NavMenu {
  id        String       @id @default(cuid())
  label     String
  path      String
  isActive  Boolean      @default(true)
  position  Int          @default(0)
  pageId    String?      @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  page      PageContent? @relation(fields: [pageId], references: [id])
}

model GlobalSettings {
  id                    String   @id @default(cuid())
  siteName              String   @default("My Website")
  siteDescription       String?
  contactEmail          String?
  publicAccess          Boolean  @default(true)
  maintenanceMode       Boolean  @default(false)
  logoType              String   @default("svg")
  logoGifUrl            String?
  logoAlt               String?  @default("Maju Mapan Digital Logo")
  robotsTxt             String?  @db.Text
  htaccess              String?  @db.Text
  googleAnalyticsScript String?  @db.Text
  metaPixelScript       String?  @db.Text
  tiktokPixelScript     String?  @db.Text
  customHeadScripts     String?  @db.Text
  customBodyScripts     String?  @db.Text
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Theme {
  id        String   @id @default(cuid())
  name      String   @unique
  colors    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  config    String?
}

model SEO {
  id              String       @id @default(cuid())
  metaTitle       String?
  metaDescription String?  @db.Text
  keywords        String?  @db.Text
  canonicalUrl    String?
  robots          String?  @default("index, follow")
  ogTitle         String?
  ogDescription   String?  @db.Text
  ogImage         String?
  structuredData  String?  @db.Text
  geoRegion       String?
  geoPlacename    String?
  geoPosition     String?
  googleBusiness  String?
  pageId          String?      @unique
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  page            PageContent? @relation(fields: [pageId], references: [id])
}

model Script {
  id        String   @id @default(cuid())
  name      String
  code      String   @db.Text
  location  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id              String        @id @default(cuid())
  name            String
  email           String
  whatsapp        String?
  service         String?
  status          String        @default("new")
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  source          String?       @default("Unknown")
  company         String?
  monthlySpend    String?
  primaryGoal     String?
  role            String?
  message         String?       @db.Text
  subject         String?
  browsingHistory String?       @db.Text
  notes           String?       @db.Text
  sessionId       String?
  chatSessions    ChatSession[]
}

model ChatSession {
  id        String        @id @default(cuid())
  leadId    String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  messages  ChatMessage[]
  lead      Lead?         @relation(fields: [leadId], references: [id])
}

model ChatMessage {
  id              String      @id @default(cuid())
  sessionId       String
  role            String
  content         String      @db.Text
  behaviorContext String?     @db.Text
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  session         ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Value {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  excerpt   String?
  slug      String   @unique
  iconUrl   String?
  bgUrl     String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bgAlt     String?
  iconAlt   String?
}

model TeamMember {
  id           String   @id @default(cuid())
  name         String
  position     String
  excerpt      String?
  thumbnailUrl String?
  linkedinUrl  String?
  email        String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  imageAlt     String?
}

model Speciality {
  id           String   @id @default(cuid())
  title        String
  subtitle     String?
  slug         String   @unique
  excerpt      String?
  description  String? @db.Text
  iconUrl      String?
  bgUrl        String?
  thumbnailUrl String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bgAlt        String?
  iconAlt      String?
  thumbnailAlt String?
}

model Client {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?     @db.Text
  excerpt     String?     @db.Text
  logoUrl     String?
  isFeatured  Boolean     @default(false)
  status      String      @default("active")
  order       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  email       String?     @unique
  password    String?
  address     String?
  legalName   String?
  logo        String?
  phone       String?
  website     String?
  brandColor  String?
  logoAlt     String?
  campaigns   Campaign[]
  caseStudies CaseStudy[]
}

model Candidate {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  password     String
  phone        String?
  resumeUrl    String?
  portfolioUrl String?
  linkedinUrl  String?
  role         String   @default("candidate")
  status       String   @default("active")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Category {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
  careers   Career[]
}

model Article {
  id           String    @id @default(cuid())
  title        String
  slug         String    @unique
  excerpt      String?   @db.Text
  content      String?   @db.LongText
  thumbnailUrl String?
  status       String    @default("draft")
  isFeatured   Boolean   @default(false)
  categoryId   String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  thumbnailAlt String?
  category     Category? @relation(fields: [categoryId], references: [id])
}

model CaseStudy {
  id           String    @id @default(cuid())
  title        String
  slug         String    @unique
  excerpt         String?   @db.Text
  content         String?   @db.LongText
  thumbnailUrl String?
  clientId     String?
  startDate    DateTime?
  endDate      DateTime?
  status       String    @default("published")
  isFeatured   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  metrics      String?   @db.Text
  thumbnailAlt String?
  client       Client?   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Career {
  id           String           @id @default(cuid())
  title        String
  slug         String           @unique
  location     String?
  type         String?
  minSalary    Float?
  maxSalary    Float?
  description  String?          @db.Text
  content      String?          @db.LongText
  requirements String?          @default("[]") @db.Text
  isRemote     Boolean          @default(false)
  applyUrl     String?
  status       String           @default("published")
  categoryId   String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  category     Category?        @relation(fields: [categoryId], references: [id])
  applications JobApplication[]
}

model JobApplication {
  id           String   @id @default(cuid())
  fullName     String
  email        String
  phone        String?
  linkedinUrl  String?
  portfolioUrl String?
  resumeUrl    String?
  coverLetter  String?  @db.Text
  answers      String?  @db.Text
  status       String   @default("new")
  careerId     String
  userId       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User?    @relation(fields: [userId], references: [id])
  career       Career   @relation(fields: [careerId], references: [id], onDelete: Cascade)
}

model HomeHero {
  id        String          @id @default(cuid())
  isDynamic Boolean         @default(true)
  isActive  Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  slides    HomeHeroSlide[]
}

model HomeHeroSlide {
  id                String   @id @default(cuid())
  heroId            String
  titleLine1        String
  titleHighlight    String
  subtitle          String
  ctaText           String
  ctaLink           String
  bgImageDesktop    String?
  bgImageMobile     String?
  bgOpacity         Float    @default(0.4)
  order             Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  bgImageDesktopAlt String?
  bgImageMobileAlt  String?
  hero              HomeHero @relation(fields: [heroId], references: [id], onDelete: Cascade)
}

model AudienceIntelligence {
  id              String   @id @default(cuid())
  sessionId       String   @unique
  interests       String?  @db.Text
  browsingHistory String?  @db.Text
  lastSearch      String?
  topTopics       String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model MediaAsset {
  id           String   @id @default(cuid())
  fileName     String
  originalName String
  altTag       String
  filePath     String
  fileSizeKb   Float
  format       String
  type         String   @default("IMAGE")
  dimensions   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AdminNavCategory {
  id        String         @id @default(cuid())
  title     String
  position  Int            @default(0)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  items     AdminNavItem[]
}

model AdminNavItem {
  id         String           @id @default(uuid())
  name       String
  href       String
  icon       String
  uiRowClass String?
  position   Int              @default(0)
  categoryId String
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  roles      String?          @default("admin")
  category   AdminNavCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model AdminPageMetadata {
  id        String   @id @default(uuid())
  routePath String   @unique
  title     String?
  subtitle  String?
  updatedAt DateTime @updatedAt
}

model MarketingService {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CampaignChannel {
  id        String   @id @default(cuid())
  name      String
  type      String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BuyingMetric {
  id          String   @id @default(cuid())
  name        String
  description String?
  context     String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CampaignObjective {
  id          String     @id @default(cuid())
  name        String
  funnelStage String?
  description String?
  status      String     @default("active")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  campaigns   Campaign[]
}

model Campaign {
  id          String             @id @default(cuid())
  name        String
  status      String             @default("draft")
  startDate   DateTime?
  endDate     DateTime?
  spend       Float              @default(0)
  clientId    String
  objectiveId String?
  metrics     String?            @db.Text
  channels    String?            @db.Text
  services    String?            @db.Text
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  objective   CampaignObjective? @relation(fields: [objectiveId], references: [id])
  client      Client             @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model NewsletterSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
